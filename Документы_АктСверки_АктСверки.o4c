uses
  System, DispIntf, ConstNames, Интерфейс, InitColors, Расчеты, РаботаСЖурналомИзменений;

implementation
var
  Options : ICOptions;
  MasterData: ICDocuments;
  Constants : IC4VPAConst;
  AddDoc: Boolean;

procedure MDS_VPABeforeOpen(Sender: TObject);
begin
  MasterData := MDS.GetMean;
  Constants := GetConstants;
  Options := GetOptions;
end;

procedure tbsHeader_Change(Sender: TObject; NewTab: Integer; var AllowChange: Boolean);
begin
 nbHed.PageIndex := NewTab;
end;

procedure tbPrintXGrid_Click(Sender : TObject);
begin
  XGrid.Print('', True);
end;


procedure tbExportXLS_Click(Sender: TObject);
begin
 XGrid.ExportToExcel;
end;

procedure Form_Open(Sender: TObject);
begin
  if MasterData.GetDocState > 0 then
    SetReadOnlyForm(Form)
  else
    eRespons.Enabled := GetUDASet('changeresp');  
  if VarAsStr(MasterData.XGrid)<>'' then
    XGrid.LoadFromString(MasterData.XGrid);
end;

procedure MDS_VPAAfterPost(Sender: TObject);
begin
  if AddDoc then
    ChangeDoc(clmtAppend,MasterData)
  else
    ChangeDoc(clmtEdit,MasterData);
end;

procedure MDS_Append(Sender: TObject);
begin
 AddDoc := true;
end;

end.
