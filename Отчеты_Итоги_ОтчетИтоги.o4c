procedure CreateObjects;
begin
  ChartTbl := CreateObject('“аблица«начений');
  ChartTbl.Close;
  ChartTbl.AddColumn('DATE',vtcDateTime,0);
  ChartTbl.AddColumn('—умма',vtcFFt,2);
  ChartTbl.AddColumn('—уммаќтп',vtcFFt,2);
  ChartTbl.AddColumn('јктив—умма',vtcFFt,2);
  ChartTbl.AddColumn('јктив—уммаќтп',vtcFFt,2);
  ChartTbl.AddColumn('ѕасив—умма',vtcFFt,2);
  ChartTbl.AddColumn('—клады—умма',vtcFFt,2);
  ChartTbl.AddColumn(' асса—умма',vtcFFt,2);
  ChartTbl.AddColumn('–асч—чет—умма',vtcFFt,2);
  ChartTbl.AddColumn('ƒеб—умма',vtcFFt,2);
  ChartTbl.Open;
end;

