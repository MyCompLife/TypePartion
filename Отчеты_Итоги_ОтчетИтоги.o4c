begin
  SetDatesOnOpenForm(DateFrom, DateTo, deDateFrom, deDateTo);
  CreateObjects;
  V := Mean;
end;

procedure Chart_Add(Vtbl : ICValueTable; Add_Field, Add_LegendName : String; index : Integer);
begin
  ChartBalans.SeriesList.Series[0].Clear;
  ChartBalans.SeriesList.Series[1].Clear;
  ChartBalans.SeriesList.Series[0].Title := Add_LegendName;
  ChartBalans.SeriesList.Series[1].Title := Add_LegendName;
  ChartBalans.Legend.Visible := true;
  Vtbl.Select;
  While Vtbl.SelectNext do
    begin
      ChartBalans.SeriesList.Series[0].AddXY(RoundDate(Vtbl.DATE,rdDay,false),Vtbl._Default[Add_Field],VarAsStr(RoundDate(Vtbl.DATE,rdDay,false))+'-('+VarAsStr(Vtbl._Default[Add_Field])+')',clRed);
      ChartBalans.SeriesList.Series[1].AddXY(RoundDate(Vtbl.DATE,rdDay,false),Vtbl._Default[Add_Field],VarAsStr(RoundDate(Vtbl.DATE,rdDay,false))+'-('+VarAsStr(Vtbl._Default[Add_Field])+')',clRed);
    end;
  ChartBalans.SeriesList.Series[0].Active := false;
  ChartBalans.SeriesList.Series[1].Active := false;
  ChartBalans.SeriesList.Series[index].Active := true;
end;

procedure rbt_choose;
var
  i : integer;
begin
  for i := 0 to 6 do
    begin
      rbtType := Form.FindComponent('rbt' + VarASStr(i)) as TO4RadioButton;
      if VarAsBool(rbtType.Checked) then
          case rbtType.Tag of
            0 : if VarAsBool(rbtInPrice.Checked) then
                  begin
                    Field := '—умма';
                    LegendName := '—умма баланса';
                    break;
                  end
                else
                  begin
                    Field := '—уммаќтп';
                    LegendName := '—умма баланса';
                    break;
                  end;
            1 : if VarAsBool(rbtInPrice.Checked) then
                  begin
                    Field := 'јктив—умма';
                    LegendName := '—умма активов';
                    break;
                  end
                else
                  begin
                    Field := 'јктив—уммаќтп';
                    LegendName := '—умма активов';
                    break;
                  end;
            2 : begin
                  Field := 'ѕасив—умма';
                  LegendName := '—умма пасивов';
                  break;
                end;
            3 : begin
                  Field := '—клады—умма';
                  LegendName := '—умма остатков товаров на складах';
                  break;
                end;
            4 : begin
                  Field := ' асса—умма';
                  LegendName := '—умма остатков денег в кассе';
                  break;
                end;
            5 : begin
                  Field := '–асч—чет—умма';
                  LegendName := '—умма остатков денег на р/с';
                  break;
                end;
            6 : begin
                  Field := 'ƒеб—умма';
                  LegendName := '—умма по дебиторам';
                  break;
                end;
          end;
    end;
end;

procedure tbRun_Click(Sender : TObject);
var
  Doc : ICDocuments;
  HeadTbl : ICValueTable;
begin
  jrItog := CreateObject('∆урналы.∆урнал»тогов');
  Doc := CreateObject('ƒокументы.Ѕаланс');
  HeadTbl := CreateObject('“аблица«начений');
  ChartTbl.Clear;
  jrItog.Select;
  While jrItog.SelectNext do
    begin
      Doc := jrItog.GetDoc;
      if (Doc.GetDate > DateFrom) and (Doc.GetDate < DateTo) then
        begin
          Doc.SaveHead('',HeadTbl);
          HeadTbl.AppendTo('DATE;ѕасив—умма;—клады—умма; асса—умма;–асч—чет—умма;ƒеб—умма',ChartTbl);
          ChartTbl.Open;
          ChartTbl.Select;
          While ChartTbl.SelectNext do
            begin
              ChartTbl.Edit;
                ChartTbl.—умма := ChartTbl.—клады—умма + ChartTbl. асса—умма + ChartTbl.–асч—чет—умма + ChartTbl.ƒеб—умма - AbsD(ChartTbl.ѕасив—умма);
                ChartTbl.—уммаќтп := ChartTbl.—клады—умма + ChartTbl. асса—умма + ChartTbl.–асч—чет—умма + ChartTbl.ƒеб—умма - AbsD(ChartTbl.ѕасив—умма);
                ChartTbl.јктив—умма := ChartTbl.—клады—умма + ChartTbl. асса—умма + ChartTbl.–асч—чет—умма + ChartTbl.ƒеб—умма;
                ChartTbl.јктив—уммаќтп := ChartTbl.—клады—умма + ChartTbl. асса—умма + ChartTbl.–асч—чет—умма + ChartTbl.ƒеб—умма;
              ChartTbl.Post;
            end;
        end;
    end;
  rbt_Choose;
  if StrPos(deSeriesType.Text,'Line;Bar')<>0 then
    Chart_Add(ChartTbl,Field,LegendName,deSeriesType.ItemIndex)
  else
    ShowMessage('“акой тип диаграммы недопустим! ¬ыберите один из заданых типов.');
end;

procedure rbt_Click(Sender : TObject);
begin
  rbt_choose;
  if StrPos(deSeriesType.Text,'Line;Bar')<>0 then
    Chart_Add(ChartTbl,Field,LegendName,deSeriesType.ItemIndex)
  else
