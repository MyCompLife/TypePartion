interface

uses
  System, DispIntf, ConstNames, РаботаСПеременными, РаботаСОбъектами,
  РаботаСКомпонентамиVCL;
  
implementation

const
  msgPartnerNotFound = 'Не найден партнер!';

var
  MasterData : ICDictionary;

procedure MDS_VPABeforeOpen(Sender : TObject);
begin
  MasterData := MDS.GetMean;
end;

procedure Form_Open(Sender : TObject);
begin
  MasterData.Params[prmInterfaceType] := itMainForm;
  MakeStandartInterface(MasterData, Form, 'tbrData', 'dbgData');
end;

procedure miPrintActive_Click(Sender : TObject);
begin
  MasterData.PrintForm('', False, 0, Null)
end;

procedure FindPartner(Partner : ICDictionary; PartnerSign, FormName : string);
var
  Dict : ICDictionary;
begin
  Dict := CreateObject('Справочники.' + PartnerSign);
  Dict.Select;
  if Dict.Find(Partner) then
    Dict.OpenAttachFormTo(FormName, MasterData)
  else
    ShowMessage(trans(msgPartnerNotFound));
end;

procedure miPartner_Click(Sender : TObject);
var
  Partner : ICDictionary;
begin
  Partner := MasterData._GetOwner;
  if Partner.IsFocused then
    case Partner.GetSign of
      'ЮрПартнеры' :
        FindPartner(Partner, 'ЮрПартнеры', 'ЮрПартнеры');
      'ФизЛица' :
        FindPartner(Partner, 'ФизЛица', 'ФизЛица');
      'Служащие' :
        FindPartner(Partner, 'Служащие', 'Служащие');
      'Банки' :
        FindPartner(Partner, 'Банки', 'Банки');
      'Реализаторы' :
        FindPartner(Partner, 'Реализаторы', 'КарточкиРеализаторов');
      'ПостНаРеализацию' :
        FindPartner(Partner, 'ПостНаРеализацию', 'КарточкиПостНаРеал')
      else
        ShowMessage(trans('Невозможно перейти к партнеру!') + #13 + trans('Тип партнера неизвестен.'));
    end
  else
    ShowMessage(trans('Невозможно перейти к партнеру!') + #13 + trans('Отсутствует владелец телефона.'));
end;

procedure miRefresh_Click(Sender : TObject);
begin
  MasterData.Refresh;
end;

procedure tbFillField_Click(Sender: TObject);
begin
if MasterData.RunThreadProcess(server.RunFillDicEP,
    'Заполнение признака "SMS-рассылка"') then
   ShowMessage('Заполнение признака "SMS-рассылка" выполнено!')
 else
   ShowMessage('Заполнение признака "SMS-рассылка" прервано пользователей либо произошла ошибка!');  
 MasterData.Refresh;
end;

end.
