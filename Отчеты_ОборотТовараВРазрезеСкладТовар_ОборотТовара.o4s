  GoodsTbl := GoodsTbls;
  GoodsList := GoodLists;
  StoreTbl := StoreTbls;
  Partner := Partners;
  Store := Stores;
  DateFrom := DateFroms;
  DateTo := DateTos;
  ShowCodeUnitname := ShowCodeUnitnames;
  OnlyMoving := OnlyMovings;  
  GroupModel := GroupModels;
  UseLevel := UseLevels;
  Items := AItems;  
  FilterList := FilterLists;  
  NameFieldsHead2 := NameFieldsHead2s;
  Result := EntryPoint(SetGoods);
end;

