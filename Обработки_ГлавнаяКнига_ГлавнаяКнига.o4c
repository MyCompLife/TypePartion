function GetQuart(DT : DateTime) : string;
var
  Quart, M : Variant;
begin
  M := GetMonth(DT);
  Quart := Int((M - 1) / 3) + 1;
  Result := VarAsStr(Quart) + ' ' + 'квартал'
end;

function GetMonthName(M : Integer) : string;
begin
  case M of
    1 : 
      Result := 'с≥чень';
    2 : 
      Result := 'лютий';
    3 : 
      Result := 'березень';
    4 : 
      Result := 'кв≥тень';
    5 : 
      Result := 'травень';
    6 : 
      Result := 'червень';
    7 : 
      Result := 'липень';
    8 : 
      Result := 'серпень';
    9 : 
      Result := 'вересень';
    10 : 
      Result := 'жовтень';
    11 : 
      Result := 'листопад';
    12 : 
      Result := 'грудень';
  end
end;

