procedure tbFixUp_VPABeforeActionClick(Sender : TObject);
var
  Doc : ICDocuments;
  LinesCount : Integer;
  Sum : Decimal;
begin
  Doc := MasterData.GetDoc;
  if Doc.GetSign = 'ƒокумент»змен¬х÷ен' then
    begin
      LinesCount := Doc.LinesCount;
      Doc.Edit;
      Doc.SelectLines;
      Doc.SelectNextLine;
      while LinesCount > 0 do
        begin
          Sum := VarAsDec(Doc. оличество) * VarAsDec(Doc.÷ена - GetPrice(Doc.¬х÷енаЅезЌƒ—, Doc.—тавкаЌƒ—));
          if Sum = 0 then
            Doc.DeleteLine
          else
            Doc.SelectNextLine;
          dec(LinesCount);
        end;
      Doc.Post;
    end;
end;

