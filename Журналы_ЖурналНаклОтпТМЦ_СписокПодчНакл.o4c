procedure pmiPrintStore_Click(Sender : TObject);
var
  V : ICProcessing;
begin
  if MasterData.IsFocused then
    case MasterData.GetDocSign of
      'Ќакладна€ќтпуска“ћ÷ѕо—чету', '¬водќстатков“ћ÷ѕо—чету', '¬озврат“ћ÷' :
