Var PrintTbl, StoreTbl,DocTbl, DetTbl:ICValueTable;

procedure Form_BeginPrint(PrintForm:TO4PrintForm);
begin
  PrintTbl:=Form.GetParams;
  StoreTbl:=PrintTbl.Params['StoreTbl'];
  DocTbl:=PrintTbl.Params['DocTbl'];
  DocTbl.SortBy('Склад;Sort');

  lbGoodName.Caption := PrintTbl.Params['Good'];
// StoreTbl.GroupToMaster('Партия;Склад;ДатаПр;Партнер;Валюта','ВхЦенаВал;ВхЦенаБезНДС;КолОбщ',StoreTbl);
end;

procedure Structure1_Store_GetData(Table:TRBTable; Index,Count:Integer; var Accept:Boolean);
begin
  if Index=0 then Accept:= StoreTbl.SelectFirst()
             else Accept:= StoreTbl.SelectNext();
  if not Accept then Exit;
  with Table do begin
   if VarAsBool(StoreTbl.@Склад.IsFocused) then
     Value['Name'] := StoreTbl.Склад.Название;
   Value['SumOut'] := StoreTbl.СумОтп;
  end;
  DocTbl.SetRange(StoreTbl.Склад,StoreTbl.Склад);
  //DocTbl.Select;
end;

procedure Structure1_Store_Doc_GetData(Table:TRBTable; Index,Count:Integer; var Accept:Boolean);
begin
  if Index=0 then Accept:= DocTbl.SelectFirst()
             else Accept:= DocTbl.SelectNext();
  if not Accept then Exit;
  with Table do begin
   Value['Date'] := DocTbl.Date;
   if VarAsBool(DocTbl.Document.IsFocused) then
     Value['Document'] := DocTbl.Document.GetName
   else
     Value['Document'] := DocTbl.Документ;
   if VarAsBool(DocTbl.Партнер.IsFocused) then
     Value['PartName'] := GetPartName(DocTbl.Партнер);
   Value['Count'] := DocTbl.КолОбщ;
   Value['Price'] := DocTbl.Цена;
   Value['Summa'] := DocTbl.СумОтп;
   Value['PartId'] := DocTbl.Партия;
  end;
end;

